    </inputs>

        <properties>
        	<property name="queueName" value="etl"/>
        </properties>   

    <workflow engine="pig" path="/apps/falcon/trucking/solr-index/index_truck_events.pig" lib="/apps/falcon/trucking/lib"/>

    <retry policy="periodic" delay="minutes(10)" attempts="3"/>
